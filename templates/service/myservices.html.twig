   <script>
    $(document).ready(function () {
        // Function to perform the search based on the specified keyword, location, and category
        function filterServices(keyword, location, category) {
            $(".room-item").each(function () {
                var textContent = $(this).text().toLowerCase();
                var foundKeyword = textContent.includes(keyword.toLowerCase());
                var foundLocation = (location === "" || textContent.includes(location.toLowerCase()));
                var foundCategory = (category === "" || textContent.includes(category.toLowerCase()));

                $(this).toggle(foundKeyword && foundLocation && foundCategory); // Show/hide the card based on search result, location, and category
            });
        }

        // Event handler for the search input, location filter, and category filter
        $("#searchapplication, #locationFilter, #categoryFilter").on("change keyup", function () {
            var searchText = $("#searchapplication").val();
            var locationFilter = $("#locationFilter").val();
            var categoryFilter = $("#categoryFilter").val();
            filterServices(searchText, locationFilter, categoryFilter);
        });
    });
</script>
