{% extends 'base.html.twig' %}

{% block title %}Service index{% endblock %}

{% block body %}
    <h1>Service index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NameS</th>
                <th>DescriptionS</th>
                <th>AvailabilityDate</th>
                <th>Localisation</th>
                <th>State</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.nameS }}</td>
                <td>{{ service.descriptionS }}</td>
                <td>{{ service.availabilityDate ? service.availabilityDate|date('Y-m-d') : '' }}</td>
                <td>{{ service.localisation }}</td>
                <td>{{ service.state }}</td>
                <td>
                    <a href="{{ path('app_services_show', {'id': service.id}) }}">show</a>
                    <a href="{{ path('app_services_edit', {'id': service.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_services_new') }}">Create new</a>
{% endblock %}
